<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/global.css" />
    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/node_modules/datatables.net/js/jquery.dataTables.js"></script>
    <script src="~/js/OverrideStyles.js"></script>
    <link rel="stylesheet" href="~/node_modules/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/node_modules/datatables.net-dt/css/jquery.dataTables.css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Rabso Garage Software</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownCRM" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            CRM
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownCRM">
                            <li><a class="dropdown-item" asp-controller="Customer" asp-action="Index">Customer Management</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="p-4">
        @RenderBody()
    </div>
</body>
</html>
